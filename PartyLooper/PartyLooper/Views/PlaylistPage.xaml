<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PartyLooper.Views.PlaylistPage"
             xmlns:local="clr-namespace:PartyLooper.ViewModels"
             Title="Playlist">
    <ContentPage.Content>
        <RefreshView Command="{Binding LoadItemsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
            <CollectionView
                x:Name="viewPlaylistItems"
                ItemsSource="{Binding PlaylistItems}"
                EmptyView="No items"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.LeftItems>
                                <SwipeItems>
                                    <SwipeItem 
                                        Text="Delete"
                                        BackgroundColor="{StaticResource Accent}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:PlaylistViewModel}}, Path=RemoveItemCommand}"		
                                            CommandParameter="{Binding}"
                                        />
                                </SwipeItems>
                            </SwipeView.LeftItems>
                            <Grid Padding="6"
                                BackgroundColor="White"
                                RowDefinitions="Auto, *"
                                ColumnDefinitions="Auto, *">
                                <Label Text=" " 
                                    Grid.RowSpan="2"
                                    FontAttributes="Bold"
                                    BackgroundColor="{StaticResource Accent}"
                                />
                                <Label Text="{Binding SongName}"
                                    FontAttributes="Bold"
                                    FontSize="17"
                                    Grid.Column="1"
                                />
                                <Label Text="{Binding FilePath}"
                                    FontAttributes="Italic"
                                    FontSize="12"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                />
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>